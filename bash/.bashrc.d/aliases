alias ls="ls --color=auto"
alias ll="ls -l --color=auto"
alias la="ls -a --color=auto"
alias diff="diff -u --color"

alias set-us-kb="setxkbmap -model default -layout us -variant altgr-intl"
alias set-es-kb="setxkbmap -model latitude -layout latam"

alias mode-night="redshift -m randr -PO 5000"
alias mode-day="redshift -m randr -x"
